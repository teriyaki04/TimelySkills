@model TimelySkills.Web.Models.OrderViewModel;

@{
    ViewBag.Title = "Create Order";
    Layout = "_Layout";
}

<h2>Create Order</h2>

<body>
    <form method="post" asp-controller="Order" asp-action="AddOrder">
        <div asp-validation-summary="ModelOnly"></div>
        <hr />
        <div class="form-floating">
            <input asp-for="SenderFIO" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="SenderFIO"></label>
            <span asp-validation-for="SenderFIO" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="SenderCity" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="SenderCity"></label>
            <span asp-validation-for="SenderCity" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="SenderAddress" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="SenderAddress"></label>
            <span asp-validation-for="SenderAddress" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ReceiverFIO" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="ReceiverFIO"></label>
            <span asp-validation-for="ReceiverFIO" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ReceiverCity" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="ReceiverCity"></label>
            <span asp-validation-for="ReceiverCity" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ReceiverAddress" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="ReceiverAddress"></label>
            <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Weight" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="Weight"></label>
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="DateOfDispatch" type="date" class="form-control" autocomplete="off" aria-required="true" />
            <label asp-for="DateOfDispatch"></label>
            <span asp-validation-for="DateOfDispatch" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" class="w-100 btn btn-lg btn-primary" value="Create" />
        </div>
    </form>
</body>
